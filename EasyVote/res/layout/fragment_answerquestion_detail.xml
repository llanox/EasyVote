<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_question_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.llanox.mobile.easyvote.AnswerQuestionDetailFragment" >

    <TextView
        android:id="@+id/question_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OOOO"
        android:padding="16dp"
        android:textIsSelectable="true" />
    
    <LinearLayout android:id="@+id/pnl_graphics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="#000000"
        android:orientation="vertical"
         ></LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/answer_options" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lb_answer_question" />

</LinearLayout>
